<style>
    .leaderboard {
        display: flex;
        justify-content: space-around;
        margin-top: 50px;
    }
    .leaderboard-item {
        text-align: center;
        width: 30%;
        background-color: #f0f0f0;
        padding: 20px;
        border-radius: 10px;
    }
    .gold {
        background-color: gold;
    }
    .silver {
        background-color: silver;
    }
    .bronze {
        background-color: #cd7f32;
    }
</style>


<h1>Top 3 Users</h1>
    <div class="leaderboard">
        {{#each TopUsers}}
            {{#if @index '===' 0}}
                <div class="leaderboard-item gold">
                    <h2>{{this.username}}</h2>
                    <p>{{this.daysSkied}} days</p>
                </div>
            {{else}}
                {{#if @index '===' 1}}
                    <div class="leaderboard-item silver">
                        <h2>{{this.username}}</h2>
                        <p>{{this.daysSkied}} days</p>
                </div>
                {{else}}
                    <div class="leaderboard-item bronze">
                        <h2>{{this.username}}</h2>
                        <p>{{this.daysSkied}} days</p>
                    </div>
                {{/if}}
            {{/if}}
        {{/each}}
    </div>


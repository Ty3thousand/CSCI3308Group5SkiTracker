    <h1 style="margin-left: 500px;">Register</h1>
    <script src="script.js"></script>
    <form action="/register" method="POST" style="margin-left: 500px;">
        <label for="username">Username</label>
        <input type="username" id="username" name="username" required><br><br>

        <label for="email">Email</label>
        <input type-"email" id="email" name="email" required><br><br>

        <label for="password">Password</label>
        <input type="password" id="password" name="password" oninput="check()" required><br><br>

        <label for="password_confirm">Confirm Password</label>
        <input type="password" id="password_confirm" name="password_confirm" oninput="check()" required><br><br>

        <button type="submit">Register</button>
    </form>
    <p style="margin-left: 500px;">Already have an account? <a href="/login">Login</a></p>

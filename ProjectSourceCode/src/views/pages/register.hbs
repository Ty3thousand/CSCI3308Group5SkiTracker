<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            margin: 0;
            padding: 0;
            background-image: url('/img/mountain1.jpg'); 
            background-size: cover;
            background-attachment: fixed;
            font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
        }
        .content {
            padding: 20px;
            margin: 100px auto;
            max-width: 600px;
            background-color: rgba(255, 255, 255, 0.5); /* Add a semi-transparent white background to make text readable */
        }
        h1 {
            margin-left: 60px;
        }
        form {
            margin-left: 40px;
        }
        p {
            margin-left: 40px;
        }
    </style>
</head>
<body>
    <script src="/js/script.js"></script>
    <div class="content">
        <h1>Register</h1>
        <form action="/register" method="POST">
            <label for="username">Username</label><br>
            <input type="username" id="username" name="username" required><br><br>
    
            <label for="email">Email</label><br>
            <input type="email" id="email" name="email" required><br><br>
    
            <label for="password">Password</label><br>
            <input type="password" id="password" name="password" oninput="check()" required><br><br>
    
            <label for="password_confirm">Confirm Password</label><br>
            <input type="password" id="password_confirm" name="password_confirm" oninput="check()" required><br><br>
    
            <button type="submit">Register</button>
        </form>
        <p>Already have an account? <a href="/login">Login</a></p>
    </div>
</body>
</html>

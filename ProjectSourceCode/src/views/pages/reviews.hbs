<div>
    <h1>Popular Reviews:</h1>

<div id="carousel" class="carousel slide" data-bs-theme="dark" data-bs-ride="carousel" >
    <div class="carousel-inner">  
          <div class="carousel-item active" data-bs-interval="1">
    </div>
{{#each data}}


    <div class="carousel-item" data-bs-interval="5000">
        <h3>{{this.mountain_name}}</h3>
        <h5>{{this.rating}}/10</h5>
        <p>{{this.description}}</p>
    </div>

{{/each}}
</div>
</div>
</div>

</div>
{{!-- Div for results --}}
<div>
    <br>
<h1>Search for other mountain reviews!</h1>
<form method="post" action="/reviews">
  <div class="form-group">
    <label for="mountain-search">Type the mountain you want to find reviews for here!</label>
    <input class="form-control" id="mountainSearch" placeholder="Search for reviews by mountain here!" name="mountain">
  
  <button type="submit" class="btn btn-primary">Search</button>
  </div>
  </form>

<div class="card-group">
    
{{#each searchResult}}

  <div class="card">
    <div class="card-body">
      <h4 class="card-title">{{this.rating}}/10</h4>
      <h5 class="card-title">{{this.mountain_name}}</h5>
      <p class="card-text">{{this.description}}</p>
      
    </div>
{{/each}}
</div>

</div>